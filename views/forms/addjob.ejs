
<!-- add jobs form  -->
<form action="/job/create" method="POST">
    <h1>Post Job</h1>
    <input type="text" name="role" placeholder="Role*" required>
    <input type="text" name="company" placeholder="Company Name*" required>
    <input type="text" name="ctc" placeholder="Salery Offered(CTC)*" required>
    <input type="text" name="skills" placeholder="Skills Required*" required>
    <input type="text" name="yop" placeholder="Year of Passing*" required>
    <input type="text" name="exp" placeholder="Years of Experience*" required>
    <input type="text" name="link" placeholder="Application link*" required>
    <textarea name="jd" id="" cols="30" rows="5" placeholder="Enter Job Description" required></textarea>
    <button value="scheduleInterview" class="submit">create</button>
    <a href="/">Back</a>
</form>
